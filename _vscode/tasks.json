{
  "tasks": [
    {
      "label": "test (C++)",
      "type": "shell",
      "command": "oj",
      "args": [
        "test",
        "--command",
        "./x",
        "--format",
        "%s.%e",
        "--directory",
        "testcase/${fileBasenameNoExtension}/"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": "build",
      "dependsOn": [
        "clang++ build active file"
      ],
      "problemMatcher": []
    },
    {
      "type": "shell",
      "label": "clang++ build active file",
      "command": "/usr/bin/clang++",
      "args": [
        "-std=c++17",
        "-O2",
        "-Wall",
        "-Wextra",
        "-o",
        "${fileDirname}/x",
        "${file}"
      ],
      "options": {
        "cwd": "/usr/bin"
      },
      "group": "build",
      "problemMatcher": []
    },
    {
      "type": "shell",
      "label": "clang++ build active file for debug",
      "command": "/usr/bin/clang++",
      "args": [
        "-std=c++17",
        "-g",
        "-o",
        "${fileDirname}/x",
        "${file}"
      ],
      "options": {
        "cwd": "/usr/bin"
      },
      "group": "build"
    },
    {
      "label": "test (Python)",
      "type": "shell",
      "command": "oj",
      "args": [
        "test",
        "--command",
        "python ${file}",
        "--format",
        "%s.%e",
        "--directory",
        "testcase/${fileBasenameNoExtension}/"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": "build",
      "problemMatcher": []
    }
  ],
  "version": "2.0.0"
}
